{
  "author": "khengyun",
  "short_name": "AutoNext",
  "name": "AutoNext",
  "icons": {
    "128": "assets/logoauto.png"
  },
  "version": "3.5.1",
  "manifest_version": 3,
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "https://*.fpt.edu.vn/*"
  ],
  "host_permissions": ["https://*.fpt.edu.vn/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "background_script/*.js",
        "assets/*.png"
      ],
      "matches": ["https://fu.edunext.vn/*"],
      "use_dynamic_url": true
    }
  ],
  "background": {
    "service_worker": "background_script/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content/content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/logoauto.png",
      "24": "assets/logoauto.png",
      "32": "assets/logoauto.png",
      "48": "assets/logoauto.png",
      "128": "assets/logoauto.png",
      "512": "assets/logoauto.png"
    },
    "default_title": "AutoNext",
    "default_popup": "pop_script/popup.html"
  }
}
